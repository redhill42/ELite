        define dividend = self;
        define q = new Polynomial();
        define r = new Polynomial();

        while (ut != null && ut.getPower(var) >= vt.getPower(var)) {
            define t = ut.divide(vt);
            define c = dividend.getCoefficient(ut) / vc;
