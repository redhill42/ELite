                    sb << (term == Term.ONE ? "1" : term);
                } else if (coef == -1) {
                    sb << (first ? "-" : " - ");
                    sb << (term == Term.ONE ? "1" : term);
                } else if (coef < 0) {
                    sb << (first ? "-" : " - ");
                    sb << (-coef) << term;
                } else {
                    if (!first) sb << " + ";
                    sb << coef << term;
                }
            } else {
                if (!first) sb << " + ";
                sb << "[" << coef << "]" << term;
            }
            first = false;
        }
        return sb.toString();
    }

    public equals(that) {
        return that is Polynomial and _term2coef == that._term2coef;
    }

